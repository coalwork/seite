<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf8">
    <%- head %>
    <link rel="stylesheet" href="/styles/fonts.css">
  </head>
  <body>
    <header>
      <!-- OPTIONAL: Create a website logo -->
      <h1>seite</h1>
      <nav>
        <% const routes = ',chat'.split(','); %>
        <% for (let route of [...routes]) { %>
        <%- `
          <a href="${`/${route}` === path ? 'javascript:void(0)' : `/${route}`}">
            ${route = route || 'home', ''}
            <img src="/assets/icon-${route}.svg" alt="${route[0].toUpperCase()}${route.slice(1)}">
          </a>
        ` %>
        <% } %>
      </nav>
    </header>
    <%- body %>
  </body>
</html>